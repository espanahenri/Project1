@model IEnumerable<BankingApp.Models.Account>

<hr />
<h1>Term Deposits</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Account Number
            </th>
            <th>
                Principle
            </th>
            <th>
                Date Created
            </th>
            <th>
                Interest Rate
            </th>
            <th>
                Term (Months)
            </th>
            <th>
                Total After Term
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.AccountType.Type == "Term Deposit")
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType.InterestRate)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.TermDeposits.FirstOrDefault(l => l.AccountId == item.Id).Term)
            </td>

            <td>
                $@Html.DisplayFor(modelItem => item.TermDeposits.FirstOrDefault(l => l.AccountId == item.Id).TotalDue)
            </td>


            <td>
                <a asp-action="Transactions" asp-route-id="@item.Id">Transactions</a> |
                @if (item.isClosed)
                {
                    <span>Closed</span>
                }
                else
                {
                    <a asp-action="Withdraw" asp-route-id="@item.Id">Withdraw</a>

                }
            </td>
        </tr>
            }

        }
    </tbody>
</table>
