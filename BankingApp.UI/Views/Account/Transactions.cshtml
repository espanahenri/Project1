@model TransactionViewModel

@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>
<h2>Account: #@Model.currentAccountId</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Transactions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>From : </label>
                <input asp-for="StartDate"   />
            </div>
            <div class="form-group">
                <label>To : </label>
                <input asp-for="EndDate"   />
            </div>
            <div class="form-group">
                <input type="submit" value="Refresh Transactions" class="btn btn-primary" asp-route=@Model.currentAccountId/>
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    @await Html.PartialAsync("../Shared/_TransactionList.cshtml", Model.Transactions)
</div>